{
    "name": "Annota",
    "version": "1.0",
    "description": "Annotation Orginization System.",
    "permissions": ["storage", "contextMenus"],
    "manifest_version": 2,
    "browser_action": {
      "default_icon": {
        "128": "annota-logo.png"
      }
    },
    "chrome_url_overrides": {
      "newtab": "templates/index.html"
    },
    "icons": {
        "128": "annota-logo.png"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["file://*/*.pdf"],
            "js": ["activities.js"]
        }
    ]
}
