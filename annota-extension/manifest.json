{
    "name": "Annota",
    "version": "1.0",
    "description": "Annotation Orginization System.",
    "permissions": [
      "contextMenus",
      "tabs",
      "*://*/*",
      "<all_urls>"
    ],
    "manifest_version": 2,
    "browser_action": {
      "default_icon": {
        "128": "annota-logo.png"
      }
    },
    "content_security_policy": "script-src 'self' 'sha256-i+dUJ6+oheHsmZl74zFuSRI/08fYTS7PErDdYKwnTYs=' 'sha256-2H7oZrKNcCmcFP50DIavseEf4iVxy1l820GGvlm27Mc=' https://cdn.quilljs.com/1.3.6/quill.js https://cdn.quilljs.com/1.3.6/quill.snow.css https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css; object-src 'self'",
    "chrome_url_overrides": {
      "newtab": "redirect.html"
    },
    "icons": {
        "128": "annota-logo.png"
    },
    "background": {
      "scripts": ["background.js", "contextMenu.js", "commands.js"],
      "persistent": false
    },
    "content_scripts": [

    ],
    "web_accessible_resources": [
      "overlay/overlay.html"
    ],
    "commands": {
        "doze": {
          "suggested_key": {
            "default": "Alt+Shift+D",
            "mac": "Alt+D"
          },
          "description": "Turn off the app"
        },
        "awake": {
          "suggested_key": {
            "default": "Alt+A",
            "mac": "Alt+A"
          },
          "description": "Turn on the app"
        },
        "help": {
          "suggested_key": {
            "default": "Alt+Shift+H",
            "mac": "Alt+H"
          },
          "description": "Opens the help page"
        },
        "addToAnnota": {
          "suggested_key": {
            "default": "Alt+Shift+Q",
            "mac": "Alt+Q"
          },
          "description": "Adds current file/page/selection to Annota"
        }
    }
}
